<section>
  <div class="border border-5 p-1 mb-3">
    <div class="d-flex justify-content-between align-items-center">
      <h2>
        Post #<%= @post.id %> by <%= @user.name %>
      </h2>
      <div>
        <span>Comments: <%= @post.comments_counter %></span>
        <span>, Likes: <%= @post.likes_counter %></span>
      </div>
    </div>
    <div>
      <%= @post.text %>
    </div>
  </div>

  <div class="border border-5 p-1 mb-3">
    <% @post.recent_comments.each do |comment| %>
      <div class="mt-3">
        <span><%= comment.user.name %>:</span>
        <span><%= comment.text %></span>
      </div>
    <% end %>
  </div>

   <div class="text-center p-4">
     <h3>Add a comment: </h3>
       <%= form_for [@post, Comment.new], url: "/comments/#{@post.id}" do |form| %>
        <div>
          <%= form.text_area :text, placeholder: "Add comment", class: "form-control"%>
        </div>
        <%= form.submit "Add Comment", class: "btn btn-outline-secondary rounded-pill m-2" %>
      <% end %>
    </div>
</section>

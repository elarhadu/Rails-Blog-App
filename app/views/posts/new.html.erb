<div class="m-4">
<%= form_with model: @post do |form| %>
  <div >
    <%= form.label :Title, class: "form-label" %>
    <%= form.text_field :title, placeholder: "post title", class: "form-control"  %>
  </div>
  <div>
    <%= form.label :text, class: "form-label" %>
    <%= form.text_area :text, placeholder: "post text...", class: "form-control form-control-lg" %>
  </div>
  <div>
    <%= form.submit "Create Post", class: "btn btn-outline-secondary rounded-pill m-2" %>
  </div>
<% end %>
</div>